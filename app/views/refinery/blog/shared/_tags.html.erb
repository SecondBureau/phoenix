<% if @tags.any? %>
  <aside class="widget">
    <h4>Tags</h4>
    <div id="tags">
    <% tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class| %>
      <%= link_to tag.name, refinery.blog_tagged_posts_path(tag.id, tag.name.parameterize), :class => "label" %>
    <% end %>
    </div>
  </aside>
<% end %>
