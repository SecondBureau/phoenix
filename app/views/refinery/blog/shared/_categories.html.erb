<% if @categories.any? %>
<aside class="widget">
  <h4>Blog Categories</h4>
  <ul id='categories' class="nav nav-tabs nav-stacked">
    <% @categories.each do |category| %>
      <li<%= " class='active'" if @category.present? and @category.id == category.id %>>
        <%= link_to "#{category.title} (#{category.post_count})", refinery.blog_category_path(category) %>
      </li>
    <% end %>
  </ul>
</aside>
<% end %>
